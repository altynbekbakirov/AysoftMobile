<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_visit_begin_date"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ziyaretDateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_square"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="11"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_visit_begin_time"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ziyaretTimeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_square"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="11"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_visit_end_date"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ziyaretEndDateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_square"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="11"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_visit_end_time"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ziyaretEndTimeEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_square"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="11"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_kasa_definition_title"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/ziyaretDefinitionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@drawable/edittext_border_square"
            android:ems="11"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:inputType="textMultiLine|textCapSentences"
            android:lines="2"
            android:maxLines="5"
            android:padding="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp">

            <requestFocus />

        </EditText>

    </LinearLayout>

</LinearLayout>