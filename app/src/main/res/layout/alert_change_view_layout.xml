<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:elevation="4dp"
    app:cardCornerRadius="5dp">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/alert_list_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:drawableStart="@drawable/ic_view_list"
            android:drawablePadding="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/products_menu_list_layout"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/alert_list_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_view_grid"
            android:drawablePadding="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/products_menu_grid_layout"
            android:textSize="18sp" />

    </RadioGroup>


</androidx.cardview.widget.CardView>