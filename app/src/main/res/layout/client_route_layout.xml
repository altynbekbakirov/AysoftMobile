            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/edittext_border_alert"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll4"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="11">

        <CheckBox
            android:id="@+id/checkThursday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:text="@string/client_popup_order_thursday"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
            style="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans_semibold"
            android:text=" - "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/thursdayNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="@drawable/edittext_border_alert"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:padding="5dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll5"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="11">

        <CheckBox
            android:id="@+id/checkFriday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:text="@string/client_popup_order_friday"
            android:textColor="@color/grey"
            android:textSize="14sp" />

        <TextView
