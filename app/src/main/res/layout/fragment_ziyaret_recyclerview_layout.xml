<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/ziyaretLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/ziyaretNoLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/client_visit_no"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ziyaretNo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:fontFamily="@font/open_sans"
                android:text="1546"
                android:maxLines="1"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/ziyaretBegdateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/client_visit_begin_date"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ziyaretBegdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_light"
                android:text="24.06.2021"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ziyaretEnddateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/client_visit_end_date"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ziyaretEnddate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_light"
                android:maxLines="1"
                android:text="14:20"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout1"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/ziyaretBegTimeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/client_visit_begin_time"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ziyaretBegTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_light"
                android:text="31.12.2021"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/ziyaretEndTimeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/client_visit_end_time"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ziyaretEndTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:fontFamily="@font/open_sans_light"
                android:maxLines="1"
                android:text="15:50"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout2"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="12">

            <TextView
                android:id="@+id/ziyaretDefinitionLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/client_kasa_definition_title"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ziyaretDefinition"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:fontFamily="@font/open_sans_light"
                android:maxLines="1"
                android:textSize="12sp" />

        </LinearLayout>

        <!--<TextView
            android:id="@+id/txtOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:text="&#8942;"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@color/black"
            android:textStyle="bold" />-->

        <ImageView
            android:id="@+id/ziyaretImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="TODO"
            android:src="@drawable/ic_check" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>