<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="1dp">

    <LinearLayout
        android:id="@+id/stockLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="15">

        <TextView
            android:id="@+id/stockAmbarNo"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/recyclerview_border"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="400"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stockAmbarAdi"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/recyclerview_border"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="Astana"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stockYeriKodu"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/recyclerview_border"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="Astana"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stockFiiliStok"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/recyclerview_border"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stockRezerver"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/recyclerview_border"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stockGercekStok"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/recyclerview_border"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text="12"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stockBekleyenUretim"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/recyclerview_border"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.cardview.widget.CardView>