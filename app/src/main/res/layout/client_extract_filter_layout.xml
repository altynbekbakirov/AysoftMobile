<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="center_vertical"
            android:text="@string/data_export_filter"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_menu" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_extract_menu_begdate"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/editDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_square"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="11"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_extract_menu_enddate"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/editDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_square"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="11"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:maxLines="1"
            android:padding="5dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>