<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/deliveryAddress"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_order_shipping_address"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/deliveryAddressEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_square"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:inputType="textMultiLine"
            android:textColor="@color/grey"
            android:ems="11"
            android:lines="4"
            android:maxLines="5"
            android:padding="5dp"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_kasa_definition_title"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/deliveryDefinitionEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@drawable/edittext_border_square"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:inputType="textMultiLine|textCapSentences"
            android:textColor="@color/grey"
            android:ems="11"
            android:lines="2"
            android:maxLines="5"
            android:padding="5dp"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll2"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_order_shipping_delivery_date"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/deliveryDateEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border_square"
            android:clickable="false"
            android:cursorVisible="false"
            android:textColor="@color/grey"
            android:ems="11"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:maxLines="1"
            android:padding="5dp"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll3"
        android:background="@drawable/linearlayout_border_line"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@string/client_order_shipping_payment_type"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <Spinner
            android:id="@+id/deliveryPaymentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_background"
            android:fontFamily="@font/open_sans_condensed_bold"
            android:textSize="12sp" />

    </LinearLayout>


</RelativeLayout>